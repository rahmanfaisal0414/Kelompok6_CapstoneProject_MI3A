<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Barkos" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary color for the app, you can adjust to match your design -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/white</item>

        <!-- Surface and Background colors -->
        <item name="colorSurface">@android:color/white</item>

        <!-- Text and OnPrimary colors (text on white surfaces) -->
        <item name="colorOnPrimary">@android:color/black</item> <!-- Teks di elemen putih -->
        <item name="colorOnSurface">@android:color/black</item> <!-- Teks di permukaan putih -->

        <!-- Additional customization for EditText or input widgets -->
        <item name="android:textColorPrimary">@android:color/black</item> <!-- Warna teks utama -->
        <item name="android:textColorHint">@android:color/darker_gray</item> <!-- Warna hint -->
    </style>

    <style name="Theme.Barkos" parent="Base.Theme.Barkos" />
</resources>
